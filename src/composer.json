{
  "name": "amir-shadanfar/blog_platform",
  "type": "project",
  "keywords": [
    "Php",
    "mvc",
    "framework"
  ],
  "require": {
    "ext-pdo": "*",
    "php": "^8.1",
    "psr/container": "^2.0@dev",
    "vlucas/phpdotenv": "^5.5@dev",
    "vlucas/valitron": "dev-master",
    "twig/twig": "^v3.0",
    "guzzlehttp/psr7": "2.6.x-dev",
    "psr/http-server-handler": "^1.0@dev",
    "psr/http-server-middleware": "^1.0@dev"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    },
    "files": [
      "helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": [
      "@phpunit"
    ],
    "phpunit": "vendor/bin/phpunit"
  },
  "authors": [
    {
      "name": "Amir shadanfar",
      "email": "a.shadanfar.it@gmail.com"
    }
  ],
  "minimum-stability": "dev",
