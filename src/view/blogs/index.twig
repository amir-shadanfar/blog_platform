{% extends "layouts/base.twig" %}

{% block title %}overview{% endblock %}
{% block content %}

<!-- Page Content -->
<section class="blog-posts" style="margin-top:0px">
    <div class="container ">
        <div class="row">
            <div class="col-lg-12">
                <div class="all-blog-posts" style="margin-top: 100px">
                    <div class="row">
                        {% for blog in blogs %}
                            <div class="col-lg-12">
                                <div class="blog-post">
                                    <div class="blog-thumb">
                                        <img src="{{ blog.image_url }}" alt="">
                                    </div>
                                    <div class="down-content">
                                        <a href="/blog/{{ blog.id }}">
                                            <h4>{{ blog.title }}</h4>
                                        </a>
                                        <ul class="post-info">
                                            <li>Author: <a href="#">{{ blog.user.name }}</a></li>
                                        </ul>
                                        <p>
                                            {#                                            {{ substr(blog.description, 0, 1000) . '...' }} #}
                                            {{ blog.description }}
                                        </p>
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <div class="col-lg-12">
                                <div class="blog-post">
                                    <p>There is no blog post right now!</p>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <ul class="page-numbers">
                    {% for page in 1..pages %}
                        <li class="{{ blogs.currentPage() == page ? 'active' : null }}">
                            <a href="/?page={{ page }}">{{ page }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</section>
{% endblock %}