<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>{% block title %}{% endblock %}</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i&display=swap"
          rel="stylesheet">
    <!-- Bootstrap core CSS -->
    <link href="../assets/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="../assets/css/fontawesome.css">
    <link rel="stylesheet" href="../assets/css/templatemo-stand-blog.css">
    <link rel="stylesheet" href="../assets/css/owl.css">
</head>
<body>

<div id="content">

    <!-- ***** Preloader Start ***** -->
    <div id="preloader">
        <div class="jumper">
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>
    <!-- ***** Preloader End ***** -->

    <!-- Header -->
    <header class="">
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand" href="/"><h2>{{ block('title') }}<em>.</em></h2></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive"
                        aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">

                        <li class="nav-item">
                            <a class="nav-link {{ block('title') == 'overview' ? 'active' : null }}"
                               href="/">Overview</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link {{ block('title') == 'about' ? 'active' : null }}"
                               href="/about">About</a>
                        </li>
                        {% if app.user is null %}
                            <li class="nav-item">
                                <a class="nav-link {{ block('title') == 'register' ? 'active' : null }}"
                                   href="/register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {{ block('title') == 'login' ? 'active' : null }}"
                                   href="/login">Login</a>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <form action="/logout" method="post" id="logout_form">
                                    <input class="nav-link" type="submit" value="logout" id="logout_button">
                                    <a class="nav-link" href="#" id="logout_link">[logout]</a>
                                </form>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    {% block content %}{% endblock %}
</div>

<div id="footer">
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="copyright-text">
                        <p>&copy;Copyright 2023 | <a href="http://https://www.check24.de">Check24</a></p>
                    </div>
                </div>
            </div>
        </div>
    </footer>
</div>

<!-- Bootstrap core JavaScript -->
<script src="../assets/jquery/jquery.min.js"></script>
<script src="../assets/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- Additional Scripts -->
<script src="../assets/js/custom.js"></script>
<script src="../assets/js/owl.js"></script>
<script src="../assets/js/slick.js"></script>
<script src="../assets/js/isotope.js"></script>
<script src="../assets/js/accordions.js"></script>
<!-- logout script -->
<script type="text/javascript">
    $('#logout_button').hide();
    $('#logout_link').on('click',function () {
        $('#logout_form').submit();
        return false;
    }).show();
</script>

</body>
</html>